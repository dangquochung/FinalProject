<%- include('header.ejs'); %>

<script type="text/javascript" src="Public/js/register.js"></script>

<div class="space_120" id="anchor"></div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 category">
        <div class="title">
            <p class="form_title">ĐĂNG KÝ TÀI KHOẢN</p>
        </div>
        <div class="space_60"></div>
        <form id="inputForm">
            <div class="form-group">
                <label for="tf_Account">Tên đăng nhập:</label>
                <input type="text" class="form-control" id="tf_Account" placeholder="Example">
            </div>
            <div class="form-group">
                <label for="tf_Password">Mật khẩu:</label>
                <input type="password" class="form-control" id="tf_Password" placeholder="********">
            </div>
            <div class="form-group">
                <label for="tf_Name">Họ tên:</label>
                <input type="text" class="form-control" id="tf_Name" placeholder="Example">
            </div>
            <div class="form-group row">
                <div class="col-xs-6">
                    <label for="tf_Email">Email:</label>
                    <input type="email" class="form-control" id="tf_Email" placeholder="examplemail@server.address">
                </div>

                <div class="col-xs-6">
                    <label for="tf_PhoneNumber">Số điện thoại:</label>
                    <input type="number" class="form-control" id="tf_PhoneNumber" placeholder="0123456789">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-6">
                    <label for="tf_DoB">Ngày sinh:</label>
                    <input type="date" class="form-control" id="tf_DoB">
                </div>

                <div class="col-xs-6">
                    <label for="cb_Gender">Giới tính:</label>
                    <select class="form-control" id="cb_Gender">
                        <option value="0">Nam</option>
                        <option value="1">Nữ</option>
                        <option value="2">Khác</option>
                    </select>
                </div>
            </div>

            <label for="input_Address">Địa chỉ:</label>
            <div class="form-group row" id="input_Address">
                <div class="col-xs-3">
                    <input type="text" class="form-control" id="tf_Province" placeholder="Tỉnh/Thành">
                </div>
                <div class="col-xs-3">
                        <input type="text" class="form-control" id="tf_City" placeholder="Quận/Huyện">
                </div>
                <div class="col-xs-3">
                        <input type="text" class="form-control" id="tf_Street" placeholder="Xã/Đường">
                </div>
                <div class="col-xs-3">
                        <input type="number" class="form-control" id="tf_HomeIndex" placeholder="Số nhà">
                </div>
            </div>
            <div class="form-group">
                <label for="ta_Desc">Ghi chú:</label>
                <textarea class="form-control" id="ta_Desc" rows="5" class="textarea" placeholder="Example"></textarea>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" value="" id="cb_AllowLisence">Tôi đồng ý với điều khoản</label>
            </div>

            <div class="space_60"></div>
            <p id="error_message" class="error_message" hidden></p>
            <div class="center_div">
                <input type="submit" value="ĐĂNG KÝ" class="btn btn-success button_center"></input>
            </div>
        </form>
    </div>
    <div class="col-sm-2"></div>
</div>
<div class="space_120"></div>

<%- include('footer.ejs') %>