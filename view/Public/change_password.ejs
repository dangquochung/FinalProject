<%- include('header.ejs'); %>

<script type="text/javascript" src="Public/js/change_password.js"></script>

<div class="space_120" id="anchor"></div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 category">
        <div class="title">
            <p class="form_title">ĐỔI MẬT KHẨU</p>
        </div>
        <div class="space_60"></div>
        <% if (cart.getCustomer() == null) { %>
            <script type="text/javascript">
                openDialog("Lỗi tải trang", "Không tìm thấy thông tin người dùng tương ứng, ấn OK để quay trở lại trang chủ!", function() {
                    window.location.href = "/";
                });
            </script>
        <% } else { %>
            <form id="inputForm">
                <div class="form-group">
                    <label for="tf_CurrentPassword">Mật khẩu hiện tại:</label>
                    <input type="password" class="form-control" id="tf_CurrentPassword" placeholder="Example">
                </div>
                <div class="form-group">
                    <label for="tf_NewPassword">Mật khẩu mới:</label>
                    <input type="password" class="form-control" id="tf_NewPassword" placeholder="********">
                </div>
                <div class="form-group">
                    <label for="tf_NewPassword2">Nhập lại khẩu mới:</label>
                    <input type="password" class="form-control" id="tf_NewPassword2" placeholder="********">
                </div>

                <div class="space_60"></div>
                <p id="error_message" class="error_message" hidden></p>
                <div class="center_div">
                    <input type="submit" value="ĐỔI MẬT KHẨU" class="btn btn-success button_center"></input>
                </div>
            </form>
        <% } %>
    </div>
</div>
<div class="space_120"></div>

<%- include('footer.ejs') %>